<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:text="Profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProfile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/dippper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProfile"
        app:shapeAppearance="@style/Circular"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/ivName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toRightOf="@id/ivProfile"
        app:layout_constraintTop_toBottomOf="@id/tvProfile"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Leovander Aditama Syahputra"
        android:fontFamily="@font/poppins_bold"
        android:textSize="15sp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-90dp"
        app:layout_constraintTop_toBottomOf="@id/ivName"
        app:layout_constraintLeft_toRightOf="@id/ivProfile"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Edit Profil"
        android:textAlignment="center"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"
        android:shadowColor="@color/cardview_dark_background"
        style="@style/Platform.MaterialComponents"
        android:outlineAmbientShadowColor="@color/black"
        android:shadowRadius="@integer/material_motion_duration_long_2"
        android:backgroundTint="#20889c"/>

    <Button
        android:id="@+id/btnPrivacy"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/btnEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Keamanan &amp; Akun"
        android:fontFamily="@font/poppins_bold"
        style="@style/Platform.MaterialComponents"
        android:textColor="@color/white"
        android:backgroundTint="#cfbe1f"
        />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnPrivacy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Pengaturan"
        android:fontFamily="@font/poppins_bold"
        style="@style/Platform.MaterialComponents"
        android:textColor="@color/white"
        android:backgroundTint="#666666"
        />

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnSettings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Keluar"
        android:fontFamily="@font/poppins_bold"
        style="@style/Platform.MaterialComponents"
        android:textColor="@color/white"
        android:backgroundTint="#df1717"
        />



</androidx.constraintlayout.widget.ConstraintLayout>